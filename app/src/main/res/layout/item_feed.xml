<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/margin_feed_item"
    android:orientation="vertical">

    <com.dl.igviewer.utility.view.DynamicHeightNetworkImageView
        android:id="@+id/image_view_feed_item_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/padding_feed_item_description"
        android:orientation="vertical"
        android:background="@color/background_feed_item">

        <TextView
            android:id="@+id/text_view_feed_item_like_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/all_theme_blue" />

    </LinearLayout>

</LinearLayout>