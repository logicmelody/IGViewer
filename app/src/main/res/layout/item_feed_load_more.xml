<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <Button
        android:id="@+id/button_feed_item_load_more"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/all_load_more" />

    <ProgressBar
        android:id="@+id/progress_bar_feed_item_load_more"
        android:layout_width="@dimen/width_height_feed_item_progress_bar"
        android:layout_height="@dimen/width_height_feed_item_progress_bar"
        android:layout_gravity="center"
        android:visibility="gone"/>

</FrameLayout>